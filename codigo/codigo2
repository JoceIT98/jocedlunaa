#Programa 2
# Ejemplo de distintos tipos de datos

# Tipo alfanumérico (string)
texto = "Hola, este es un ejemplo de string"

# Tipo entero
numero_entero = 42

# Tipo flotante
numero_flotante = 3.1416

# Tipo binario
numero_binario = 0b1010  # Representa el número 10 en decimal

# Tipo lista
lista_ejemplo = [1, "dos", 3.0, 0b100]  # Mezcla de tipos de datos en una lista

# Imprimir todos los datos
print("String:", texto)
print("Entero:", numero_entero)
print("Flotante:", numero_flotante)
print("Binario:", bin(numero_binario))  # Convierte el binario a su representación legible
print("Lista:", lista_ejemplo)
